---
import fg from 'fast-glob';

interface Props {
    slug: string,
    project: string,
    name?: string,
    nameSize?: number
}

const { slug, project, name = project, nameSize } = Astro.props;

const images = fg.sync(`public/projects/${project}/*`).map(path => {    
    return path.substring(6, path.length);
});
---

<div class="swiper swiper-container">
    <div class="swiper-wrapper">
        {
            images.map((image, i) => {
                return <div class="swiper-slide"><a href={slug}><img src={image} alt={`corousel ${i}`} loading="eager"></a></div>
            })
        }
    </div>
    <div class="swiper-hover">
        <p style=`font-size: ${nameSize ? nameSize : '1.6'}vw;`>{name}</p>    
    </div>
    <div class="swiper-pagination"></div>
</div>

<script>
    import Swiper from 'swiper';
    import { Navigation, Pagination } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/pagination';

    const swiper = new Swiper(".swiper-container", {
        modules: [Navigation, Pagination],
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        }
    });
</script>

<style>
    .swiper {
        position: relative;
        width: 80%;
    }

    .swiper-slide {
        text-align: center;
        font-size: 20px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .swiper-hover {
        position: absolute;
        pointer-events: none;
        bottom: 0;
        width: 100%;
        height: 4em;
        padding-bottom: 2em;
        background-color: var(--dark-shade);
        opacity: 0.8;
        transform: translateY(100%);
        transition: transform 0.2s ease-in;
        transform-origin: top center;
        z-index: 99;
    }

    .swiper-hover p {
        opacity: 0;
        transition: opacity 0.2s linear 0.3s;
        color: var(--light-shade);
        font-size: 1.6vw;
        text-align: center;
    }

    .swiper-container:hover .swiper-hover,
    .swiper-container:focus .swiper-hover {
        transform: translateY(0%);
    }

    .swiper-container:hover .swiper-hover p,
    .swiper-container:focus .swiper-hover p {
        opacity: 1;
    }

    .swiper-pagination {
        z-index: 999;
    }

    .swiper-container:hover,
    .swiper-container:focus  {
        --swiper-pagination-bullet-inactive-color: var(--light-shade);
    }

    @media only screen and (max-width: 900px) {
        .swiper {
            width: 50%;
        }
    }
</style>