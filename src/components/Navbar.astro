---
import { Image } from 'astro:assets';
import signatureImage from "/public/assets/signature.png";

interface Props {
    active: "home" | "projects" | ""
}

const { active } = Astro.props;
---

<nav>
    <Image src={signatureImage} alt="icon" loading="eager"/>
    <a href="#contact-me">Contact</a>
    <a class={active === "projects" ? "active" : ""} href="/projects">Projects</a>
    <a class={active === "home" ? "active" : ""} href="/">Home</a>
</nav>

<style>
    nav {
        position: sticky;
        top: 0;
        display: flex;
        width: 100%;
        place-content: center;
        place-items: center;
        background-color: var(--dark-shade);
        color: var(--light-shade);
        overflow: hidden;
        z-index: 10000000;
        transition: all 0.3s ease-out;
    }

    a {
        padding: 1rem;
        font-size: 1.4vw;
        float: left;
    }

    img {
        width: 80px;
        height: auto;
    }

    a::after {
        content: '';
        display: block;
        height: 0.2vw;
        width: 100%;
        background-color: var(--dark-accent);
        margin: 0 auto;
        transform-origin: left top;
        transform: scale(0, 1);
        transition: color 0.1s, transform 0.2s ease-out;
    }

    a:active::after {
        transform: scale(1, 1);
    }

    a:hover::after, a:focus::after {
        transform: scale(1, 1);
    }

    a:is(.active)::after {
        transform: scale(1, 1);
    }

</style>