---
import Layout from "../layouts/Layout.astro";
import fg from "fast-glob";
import { getCollection } from "astro:content";

import ProjectList from "../components/ProjectList.astro";
import ProjectCard from "../components/ProjectCard.astro";

const allProjects = await getCollection("projects");

const displayProject =
    allProjects[Math.floor(Math.random() * allProjects.length)];
const images = fg
    .sync(`public/projects/${displayProject.slug}/*`)
    .map((path) => {
        return path.substring(6, path.length);
    });
---

<Layout navLocation="projects">
    <main>
        <div class="swiper swiper-big-container">
            <div class="swiper-wrapper">
                {
                    images.map((image, i) => {
                        return (
                            <div class="swiper-slide">
                                <img
                                    src={image}
                                    alt={`corousel ${i}`}
                                    loading="eager"
                                />
                            </div>
                        );
                    })
                }
            </div>
            <div class="swiper-project-box">
                <h2>Projects</h2>
                <p>My treasured collection</p>
            </div>
            <div class="swiper-pagination"></div>
        </div>
        <div class="projects">
            <ProjectList autoFit={true}>
                {
                    allProjects.map((project) => {
                        return (
                            <ProjectCard
                                slug={`project/${project.slug}`}
                                project={project.data.id}
                                name={project.data.title}
                                nameSize={1.1}
                            />
                        );
                    })
                }
            </ProjectList>
        </div>
    </main>
</Layout>

<script>
    import Swiper from "swiper";
    import { Autoplay, Pagination } from "swiper/modules";
    import "swiper/css";
    import "swiper/css/pagination";

    const swiper = new Swiper(".swiper-big-container", {
        modules: [Autoplay, Pagination],
        pagination: {
            el: ".swiper-pagination",
            type: "progressbar",
        },
        autoplay: {
            delay: 5000,
            disableOnInteraction: false,
        },
    });
</script>

<style>
    .projects {
        background-color: var(--dark-shade);
        padding: 3em 1em;
    }

    .search-container {
        margin: 1em;
    }

    #searchbar {
        background-color: var(--dark-shade);
        outline: none;
        border: 5px solid var(--dark-shade);
        padding: 1em;
        width: 15rem;
        transform-origin: left center;
        color: var(--light-shade);
        border-radius: 10px;
        transition: width 0.3s ease-out;
    }

    #searchbar:focus,
    #searchbar:hover {
        width: 17rem;
    }

    .swiper {
        position: relative;
        width: 100%;
        height: 60vh;
    }

    .swiper-slide {
        text-align: center;
        font-size: 20px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
    }

    .swiper-project-box {
        position: absolute;
        display: flex;
        flex-direction: column;
        bottom: 0;
        place-items: center;
        place-content: center;
        margin: 2em;
        height: fit-content;
        padding: 2em;
        padding-right: 10em;
        color: var(--light-shade);
        background-color: var(--light-accent);
        z-index: 9999999999;
    }

    .swiper-project-box h2 {
        align-self: flex-start;
        text-align: left;
        font-size: 4vw;
        line-height: 0px;
    }

    .swiper-project-box p {
        align-self: flex-start;
        text-align: left;
        font-size: 2vw;
    }
</style>
